<h1>Books</h1>
user#show

<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/list', user: @user, book: @book %>

<table>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>