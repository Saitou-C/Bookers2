<h1>book#show</h1>
<h1>Book detail</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <tr>
    <td>画像：<%#= image_tag book.user.get_profile_image(100,100) %>
      <br><%= @book.user.name %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

      <% if @book.user == current_user %>
      <td>
        Edit
        <%#= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      </td>
      <% end %>
  </tr>
</table>